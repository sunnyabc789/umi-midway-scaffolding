{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "lib": [
      "dom",
      "es2017"
   ],
    "paths": {
      "common/*": ["common/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "/client",
    "/server/node_modules/",
    "**/*.spec.ts"
  ]
}
